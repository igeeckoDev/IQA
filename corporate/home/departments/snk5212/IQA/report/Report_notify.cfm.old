<!--- DV_CORP_002 28-APR-09 Reconcilation 2 --->
<cfset Year = #Dateformat(now(), 'yyyy')#>
<cfset NextYear = #Year# + 1>
<cfset Month = #Dateformat(now(), 'mm')#>
<cfset Day = #Dateformat(now(), 'dd')#>

<cfif month LESS THAN OR EQUAL TO 3>
	<cfset n = 1>
	<cfset reportyear = #year# - 1>
<cfelseif month LESS THAN OR EQUAL TO 6 AND month Greater Than 3>
	<cfset n = 2>
	<cfset reportyear = #year#>
<cfelseif month LESS THAN OR EQUAL TO 9 AND month Greater Than 6>
	<cfset n = 3>
	<cfset reportyear = #year#>
<cfelseif month LESS THAN OR EQUAL TO 12 AND month Greater Than 9>
	<cfset n = 4>
	<cfset reportyear = #year#>
</cfif>

<cfoutput>
<CFQUERY Datasource="#Request.DSN#" Name="RC"> 
<!--- DV_CORP_002 28-APR-09 Reconcilation 2 Change start--->


SELECT *
 FROM RC_Comments
 WHERE YEAR_=#reportyear# AND  Quarter = #n#
<!--- DV_CORP_002 28-APR-09 Reconcilation 2 Change End--->
</CFQUERY>
</cfoutput>

<cfif Month is 1 or Month is 4 or Month is 7 or Month is 10 or Month is 6>
	<cfif Day is 01 or Day is 29>
<cfmail 
	to="Christopher.J.Nicastro@us.ul.com" 
	from="Internal.Quality.Audits@us.ul.com"
	bcc="Christopher.J.Nicastro@us.ul.com, Internal.Quality.Audits@us.ul.com"
	subject="Third Party Report Card - Quarter #Quarter#, #Year#"
	query="RC">Please view the Third Party Report Card for Quarter #quarter# of #year#:

http://<cfoutput>#global.homevar#</cfoutput>/departments/snk5212/iqa/report/report.cfm?year=#year#

Comments:
<cfset S1 = #ReplaceNoCase(Comments,"<br>",chr(13), "ALL")#>
#S1#
</cfmail>
	</cfif>
<cfelse>
</cfif>

